<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/forecast_weather_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="0dp" />

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/forecast_weather_icon">

        <TextView
            android:id="@+id/dayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:textSize="18dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:textColor="#026c15" />
        <TextView
            android:id="@+id/forecastConditionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forecastTemperatureLowTextView"
        android:textSize="24dp"
        android:text="17 \u00B0C"
        android:layout_marginRight="130dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/dashMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"
        android:layout_marginTop="15dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forecastTemperatureHighTextView"
        android:textSize="24dp"
        android:text="25 \u00B0C"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        />
</RelativeLayout>